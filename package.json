{
  "name": "latvian-sentence-tester-app",
  "version": "1.0.0",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "lint": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "lint:client": "eslint client/src --ext .ts,.tsx",
    "lint:server": "eslint server --ext .ts",
    "format": "prettier --write . --ignore-path .prettierignore",
    "format:check": "prettier --check . --ignore-path .prettierignore",
    "format:client": "prettier --write client/src/**/*.{ts,tsx,js,jsx,css,json}",
    "format:server": "prettier --write server/**/*.{ts,js,json}",
    "lint-and-format": "npm run format && npm run lint",
    "fix-all": "npm run format && npm run lint:fix",
    "test": "jest",
    "cypress:open:only": "cypress open",
    "cypress:run:only": "cypress run",
    "cypress:open": "start-server-and-test dev http://localhost:5174 cypress:open:only",
    "cypress:run": "start-server-and-test dev http://localhost:5174 cypress:run:only"
  },
  "dependencies": {
    "lucide-react": "^0.292.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@eslint/css": "^0.9.0",
    "@eslint/js": "^9.30.1",
    "@eslint/json": "^0.13.0",
    "@eslint/markdown": "^6.6.0",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.10",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^4.6.0",
    "autoprefixer": "^10.4.0",
    "cypress": "^14.5.3",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-formatter-codeframe": "^7.32.1",
    "eslint-plugin-prettier": "^5.5.1",
    "eslint-plugin-react": "^7.37.5",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "msw": "^2.10.4",
    "postcss": "^8.4.0",
    "prettier": "^3.6.2",
    "start-server-and-test": "^2.0.12",
    "tailwindcss": "^3.4.1",
    "ts-jest": "^29.4.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.35.1",
    "vite": "^6.3.5",
    "whatwg-fetch": "^3.6.20"
  }
}
